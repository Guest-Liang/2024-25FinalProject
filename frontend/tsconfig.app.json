{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*", "env.d.ts", "src/**/*.vue", "src/**/*.json"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "noEmit": false,
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "outDir": "./",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@types/*": ["src/types/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
